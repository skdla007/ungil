                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Rectangle.Style>
                                                                                        </Rectangle>
                                                                                    </Border>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter Property="SelectionMode" Value="Single"/>
                                                                </Style>
                                                            </ListBox.Style>
                                                        </ListBox>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                            <Grid x:Name="_colorCanvasHost" Visibility="Collapsed">
                                                <xctk:ColorCanvas x:Name="PART_ColorCanvas" BorderThickness="0" Background="Transparent" SelectedColor="{Binding SelectedColor, RelativeSource={RelativeSource TemplatedParent}}" UsingAlphaChannel="{Binding UsingAlphaChannel, RelativeSource={RelativeSource TemplatedParent}}"/>
                                            </Grid>
                                            <ToggleButton x:Name="_colorMode" Margin="3,5,3,0" Grid.Row="2" Style="{DynamicResource sToggleButton_Common}" FontWeight="Bold" Height="30" Visibility="Collapsed"/>
                                        </Grid>
                                    </Border>
                                    <Border x:Name="border" BorderThickness="1" Margin="1" CornerRadius="4">
                                        <Border.BorderBrush>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="White" Offset="0"/>
                                                <GradientStop Offset="0.5"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="DisplayColorAndName" Value="True">
                                <Setter Property="Visibility" TargetName="ColorOnly" Value="Collapsed"/>
                                <Setter Property="Visibility" TargetName="ColorAndName" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsChecked" SourceName="_colorMode" Value="False">
                                <Setter Property="Content" TargetName="_colorMode" Value="STANDARD"/>
                                <Setter Property="Visibility" TargetName="_colorCanvasHost" Value="Visible"/>
                                <Setter Property="Visibility" TargetName="_gridStandardColorsHost" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="0" CornerRadius="0,0,6,6" Grid.Row="1" Background="#CC000000"/>
        <Grid Margin="0">
            <Border BorderBrush="Black" BorderThickness="0,0,0,1" CornerRadius="6,6,0,0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF343434" Offset="1"/>
                        <GradientStop Color="#FF747474"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <TextBlock x:Name="xTitleTextBlock_Shadow" HorizontalAlignment="Left" Margin="15,0,0,2" Foreground="#FF191919" Text="{x:Static Language:Resource_ArcGISControl_Properties.Title_CameraPreset}" FontWeight="Bold" Style="{DynamicResource sTextBlock_Basic}" VerticalAlignment="Center"/>
            <TextBlock x:Name="xTitleTextBlock" HorizontalAlignment="Left" Margin="15,0,0,0" Foreground="White" Text="{x:Static Language:Resource_ArcGISControl_Properties.Title_Text}" FontWeight="Bold" Style="{DynamicResource sTextBlock_Basic}" VerticalAlignment="Center"/>
        </Grid>
        <StackPanel Margin="20" Grid.Row="1">
            <!-- Font -->
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14">
                <TextBlock TextWrapping="Wrap" Text="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Font}" Style="{DynamicResource sTextBlock_Basic}" Foreground="White" FontWeight="Bold" Width="111" d:LayoutOverrides="HorizontalMargin" TextAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox SelectedItem="{Binding DataInfo.FontFamily, UpdateSourceTrigger=PropertyChanged}" 
                          ItemsSource="{x:Static Fonts.SystemFontFamilies}" Style="{DynamicResource sComboBox}" 
                          Height="27" Width="182" d:LayoutOverrides="Height" Margin="5,0,0,0" TabIndex="30" ItemContainerStyle="{DynamicResource sComboBoxItem}"/>
            </StackPanel>
            <!-- Text Decoration -->
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14">
                <TextBlock TextWrapping="Wrap" Style="{DynamicResource sTextBlock_Basic}" Foreground="White" FontWeight="Bold" Width="116" d:LayoutOverrides="HorizontalMargin" TextAlignment="Right" VerticalAlignment="Center"/>
                <CheckBox Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Checkbox_Bold}" 
                          IsChecked="{Binding DataInfo.IsBold, UpdateSourceTrigger=PropertyChanged}" IsThreeState="True"
                          Checked="CheckBox_Checked_IsBold" Unchecked="CheckBox_Checked_IsBold" Indeterminate="CheckBox_Checked_IsBold" Foreground="White" Style="{DynamicResource sCheckBox}" Margin="0,0,10,0"></CheckBox>
                <CheckBox Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Checkbox_Italic}" 
                          IsChecked="{Binding DataInfo.IsItalic, UpdateSourceTrigger=PropertyChanged}" IsThreeState="True"
                          Checked="CheckBox_Checked_IsItalic" Unchecked="CheckBox_Checked_IsItalic" Indeterminate="CheckBox_Checked_IsItalic" Foreground="White" Style="{DynamicResource sCheckBox}" Margin="0,0,10,0"></CheckBox>
                <CheckBox Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Checkbox_Underline}" 
                          IsChecked="{Binding DataInfo.IsUnderline, UpdateSourceTrigger=PropertyChanged}" IsThreeState="True"
                          Checked="CheckBox_Checked_IsUnderline" Unchecked="CheckBox_Checked_IsUnderline" Indeterminate="CheckBox_Checked_IsUnderline" Foreground="White" Style="{DynamicResource sCheckBox}"></CheckBox>
            </StackPanel>
            <!-- Font Size-->
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14">
                <TextBlock TextWrapping="Wrap" Text="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_FontSize}" Style="{DynamicResource sTextBlock_Basic}" Foreground="White" FontWeight="Bold" Width="111" d:LayoutOverrides="HorizontalMargin" TextAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox SelectedItem="{Binding DataInfo.FontSize, UpdateSourceTrigger=PropertyChanged}" 
                          ItemsSource="{Binding FontSizeList}" Style="{DynamicResource sComboBox}" 
                          Height="27" Width="182" d:LayoutOverrides="Height" Margin="5,0,0,0" TabIndex="30" ItemContainerStyle="{DynamicResource sComboBoxItem}"/>
            </StackPanel>
            <!-- Font Color -->
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14">
                <TextBlock TextWrapping="Wrap" Text="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_FontColor}" Style="{DynamicResource sTextBlock_Basic}" Foreground="White" FontWeight="Bold" Width="111" d:LayoutOverrides="HorizontalMargin" TextAlignment="Right" VerticalAlignment="Center"/>
                <Grid Height="27" Width="27" d:LayoutOverrides="Width" Margin="5,0,0,0">
                    <xctk:ColorPicker SelectedColor="{Binding DataInfo.FontColor, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToColorConverter}}" 
                                     IsHitTestVisible="True"  ShowDropDownButton="False" Style="{DynamicResource sColorPicker}" TabIndex="10" />
                </Grid>
            </StackPanel>
            <!-- Background Color-->
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14">
                <TextBlock TextWrapping="Wrap" Text="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_BackgroundColor}" Style="{DynamicResource sTextBlock_Basic}" Foreground="White" FontWeight="Bold" d:LayoutOverrides="HorizontalMargin" TextAlignment="Right" VerticalAlignment="Center" Width="111"/>
                <Grid Height="27" Width="27" d:LayoutOverrides="Width" Margin="5,0,0,0">
                    <xctk:ColorPicker SelectedColor="{Binding DataInfo.BackgroundColor, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToColorConverter}}" 
                                     IsHitTestVisible="True"  ShowDropDownButton="False" Style="{DynamicResource sColorPicker}" TabIndex="10" />
                </Grid>
                <TextBlock TextWrapping="Wrap" Text="{x:Static Language:Resource_ArcGISControl_Properties.Label_UniversalObject_BorderOutline}" Style="{DynamicResource sTextBlock_Basic}" 
                           Visibility="{Binding DataInfo.UseBorder, Converter={StaticResource ResourceKey=booleanToVisible}}"
                           Foreground="White" FontWeight="Bold" d:LayoutOverrides="HorizontalMargin" TextAlignment="Right" VerticalAlignment="Center" Width="111"/>
                <Grid Height="27" Width="27" d:LayoutOverrides="Width" Margin="5,0,0,0" Visibility="{Binding DataInfo.UseBorder, Converter={StaticResource ResourceKey=booleanToVisible}}">
                    <xctk:ColorPicker SelectedColor="{Binding DataInfo.BorderColor, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToColorConverter}}" 
                                     IsHitTestVisible="True"  ShowDropDownButton="False" Style="{DynamicResource sColorPicker}" TabIndex="10" />
                </Grid>
            </StackPanel>
            <!-- Align-->
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14">
                <TextBlock TextWrapping="Wrap" Text="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Align}" Style="{DynamicResource sTextBlock_Basic}" Foreground="White" FontWeight="Bold" Width="111" TextAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <RadioButton Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Combo_Left}"  x:Name="xRadioButtonLeft" 
                             IsChecked="{Binding DataInfo.TextAlignment, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Left, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource sRadioButton}" Foreground="White" Margin="0,0,10,0"></RadioButton>
                <RadioButton Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Combo_Center}" x:Name="xRadioButtonCenter" 
                             IsChecked="{Binding DataInfo.TextAlignment, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Center, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource sRadioButton}" Foreground="White" Margin="0,0,10,0"></RadioButton>
                <RadioButton Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Combo_Right}" x:Name="xRadioButtonRight"
                             IsChecked="{Binding DataInfo.TextAlignment, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Right, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource sRadioButton}" Foreground="White"></RadioButton>
            </StackPanel>
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14">
                <TextBlock TextWrapping="Wrap" Text="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Vertical_Align}" Style="{DynamicResource sTextBlock_Basic}" Foreground="White" FontWeight="Bold" Width="111" TextAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <RadioButton Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Combo_Top}"
                             IsChecked="{Binding DataInfo.TextVerticalAlignment, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Top, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource sRadioButton}" Foreground="White" Margin="0,0,10,0"></RadioButton>
                <RadioButton Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Combo_Vertical_Center}"
                             IsChecked="{Binding DataInfo.TextVerticalAlignment, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Center, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource sRadioButton}" Foreground="White" Margin="0,0,10,0"></RadioButton>
                <RadioButton Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_Combo_Bottom}"
                             IsChecked="{Binding DataInfo.TextVerticalAlignment, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Bottom, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource sRadioButton}" Foreground="White"></RadioButton>
            </StackPanel>
            <!-- Lock to Screen -->
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,14" Visibility="Collapsed">
                <CheckBox Content="{x:Static Language:Resource_ArcGISControl_Properties.Label_Text_LockToScreen}" Foreground="White" FontWeight="Bold" Width="242" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
